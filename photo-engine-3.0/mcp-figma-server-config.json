{
  "mcpServers": {
    "figma": {
      "command": "npx",
      "args": [
        "-y", 
        "@figma/mcp-server"
      ],
      "env": {
        "FIGMA_ACCESS_TOKEN": "your-figma-token-here"
      }
    },
    "html-to-design": {
      "command": "npx",
      "args": [
        "-y",
        "@html-to-design/mcp-server"
      ],
      "env": {
        "HTML_TO_DESIGN_API_KEY": "your-html-to-design-key-here"
      }
    }
  }
}